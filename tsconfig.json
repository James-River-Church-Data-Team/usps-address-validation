{
	"compilerOptions": {
		"target": "esnext",
		"module": "nodenext",
		"lib": [
			"ESNext",
		],
		"outDir": "./dist",
		"rootDir": "./",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"moduleResolution": "nodenext",
	},
	"include": [
		"server/*.ts",
	],
	"exclude": [
		"node_modules",
		"dist",
	]
}
